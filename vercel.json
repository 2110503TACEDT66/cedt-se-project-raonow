{
    "version": 2,
    "name": "HotelBooking",
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": ["/api/v1/(.*)", "/api-docs/(.*)"],
            "destination": "/backend/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ]
}